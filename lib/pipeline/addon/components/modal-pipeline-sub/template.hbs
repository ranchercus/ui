<h2>
  {{t "subPipeline.title" name=model.displayName}}
</h2>

<div class="row">
  <label class="acc-label pb-5">
    {{t "subPipeline.subpath.label" }}
  </label>
  {{input
    class="form-control"
    value=subPath
    placeholder=(t 'subPipeline.subpath.helpText')
  }}
</div>
<div class="row">
  {{input type="checkbox" checked=isContextPath }}
  <label class="acc-label pb-5">
    {{t "subPipeline.isContextPath.label" }}
  </label>
</div>
{{top-errors errors=errors}}
{{save-cancel
  createLabel="generic.add"
  save=(action "save")
  cancel=(action "cancel")
}}
