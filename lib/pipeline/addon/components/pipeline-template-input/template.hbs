<div class="row">
  <div class="col span-8">
    <label class="text-muted">
      {{t 'pipelineTemplate.template.label'}}
    </label>
    {{field-required}}
    {{input-yaml
      showUpload=false
      showDownload=false
      canChangeName=false
      value=model.template
      autoResize=true
      readOnly=false
      loading=false
    }}
  </div>
  <div class="col span-4">
    <div class="row mt-10 mb-10">
      <label class="acc-label pb-5">
      {{t 'generic.name'}}
      </label>
      {{field-required}}
      {{input
        class="form-control"
        value=model.name
      }}
    </div>
    <div class="row mt-10 mb-10">
      {{form-value-array
        initialValues=model.categories
        addActionLabel="pipelineTemplate.category.add"
        valueLabel="pipelineTemplate.category.label"
        valuePlaceholder="pipelineTemplate.category.holder"
        changed=(action (mut model.categories))
        required=true
        editing=true
      }}
    </div>
  </div>
</div>
{{top-errors errors=errors}}
{{save-cancel
  createLabel="generic.save"
  save=(action "save")
  cancel=(action "cancel")
}}